{
    "presets":[
        "@babel/env",
        "@babel/react"
    ],
    "plugins": [
        [
            "@babel/plugin-proposal-class-properties",
            { "loose": true }
        ],
        "@babel/plugin-syntax-dynamic-import",
        [
            "module-resolver",
            {
                "extensions": [".js", ".jsx", ".ts", ".tsx", ".mjs"],
                "alias": {
                    "@src": "./src",
                    "@components": "./src/components",
                    "@constants": "./src/constants",
                    "@style": "./src/style",
                    "@utils": "./src/utils",
                    "@engine": "./src/gameEngine"
                }
            }
        ]
    ]
}
